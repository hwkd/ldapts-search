{
    "compileOnSave": true,
    "exclude": ["./node_modules", "./dist", "./src/**/*.test.ts"],
    "compilerOptions": {
      "target": "es6",                          
      "module": "commonjs",
      "lib": ["es5", "es6"],
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "composite": true,
      "removeComments": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ],
      "types": ["node"],
      "esModuleInterop": true,
      "sourceRoot": "./src",
      "declaration": true,
    }
  }